{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./components/*"],
      "@content/*": ["./content/*"],
      "@context/*": ["./lib/context/*"],
      "@context": ["./lib/context/"],
      "@config": ["./config/"],
      "@data/*": ["./data/*"],
      "@layout": ["./components/layout/"],
      "@svg/*": ["./components/svg/*"],
      "@svg": ["./components/svg/"],
      "@commerce/*": ["./components/commerce/*"],
      "@images/*": ["./content/images/*"],
      "@lib/*": ["./lib/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@hooks": ["./utils/hooks/"],
      "@hooks/*": ["./utils/hooks/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "additional.d.ts",
    "lib/sanity/sanity.image.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
